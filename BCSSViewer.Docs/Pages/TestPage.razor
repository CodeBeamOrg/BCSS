@page "/testpage"
@using BCSS.Services;
@inject BcssService Bc
@inject NavigationManager NavigationManager

<MudContainer>
    <MudText>BCSS</MudText>

    <MudTextField @bind-Value="_cssString" />

    Suffixes: @string.Join(", ", _prefixes)
    Name: @_name
    Value: @_value

    <MudButton OnClick="Convert">Convert</MudButton>
    <MudButton OnClick="@(() => NavigationManager.NavigateTo("/"))">Go To First Page</MudButton>
</MudContainer>

@code {
    string _cssString = "";
    List<string> _prefixes = new();
    string _name = "";
    string _value = "";

    private void Convert()
    {
        _prefixes = BlazorCssConverter.GetPrefixes(_cssString);
        _value = BlazorCssConverter.Convert(_cssString);
    }
}