@page "/configuration/breakpoints"
@namespace BCSSViewer.Docs.Pages

<MudContainer>
    <MudText Class="mb-4" Typo="Typo.h4">Breakpoints</MudText>

    <MudStack Class="mt-4" Spacing="4">
        <MudText>BCSS currently supports 5 breakpoints and 1 definition: xs, sm, md, lg and xl with 'mobile'.</MudText>
        <CodeBlock Description="Breakpoint defaults:" Code="@("xs: 0-599\nsm: 600-959\nmd: 960-1279\nlg: 1280-1919\nxl: =>1920")" />
        <CodeBlock Description="There are two ways to change breakpoints dynamically. First, in BlazorCssProvider component you can set different breakpoint values individually." Code="@("<BlazorCssProvider xs=\"360\" lg=\"1720\" />")" />
        <CodeBlock Description="And the second is with using BcssService's SetBreakpoints method." Code="@("@inject BcssService Bc\nBc.SetBreakpoints(sm: 620, xl: 2440)")" />
        <CodeBlock Title="Usage" Description="Smaller breakpoint's values valid for larger ones." Code="@("sm:bg-yellow\t//background is yellow on sm and up (sm, md, lg, xl)\nlg:bg-blue\t//background is blue on lg and up (lg, xl)\nbg-black sm:bg-yellow lg:bg-blue\t//background is black on xs, yellow on sm and md, blue on lg and xl")" />
        <CodeBlock Title="Enhanced Mobile Usage" Description="xs and mobile prefixes means the style only apply on mobile screens (max-width: Xs). 'mobile' and 'xs' prefixes has same result." Code="@("mobile:bg-yellow\nxs:color-blue")" />
        <CodeBlock Title="Examples" Description="Hide only on mobile." Code="@("xs:hidden\n//or\nmobile:hidden\n//or\nhidden sm:d-block")" />
    </MudStack>

    <PageBottomRouting PreviousHref="/gettingstarted/installation" PreviousText="Installation" NextHref="/configuration/spacing" NextText="Spacing" />
</MudContainer>
