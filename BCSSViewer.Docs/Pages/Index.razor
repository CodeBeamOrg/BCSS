@page "/"
@inject BCSSService BC

<BlazorCssProvider />

<MudText>BCSS</MudText>

<MudPaper Class="@BC.Add(_cssString)" Width="200px" Height="200px" Style="background-color: blue" tabindex="1">

</MudPaper>

<MudTextField @bind-Value="_cssString" Immediate="false" />

<MudButton OnClick="StateHasChanged">Refresh</MudButton>

@code {
    BlazorCssProvider? _blazorCssProvider;
    string _cssString = "w-400";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);
        if (firstRender)
        {
            StateHasChanged();
        }
    }
}
