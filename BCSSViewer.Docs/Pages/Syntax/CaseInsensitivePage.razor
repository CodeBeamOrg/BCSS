@page "/syntax/casesensitivity"
@namespace BCSSViewer.Docs.Pages

<MudContainer>
    <MudText Class="mb-4" Typo="Typo.h4">Case Sensitivity</MudText>

    <MudStack Class="mt-4" Spacing="4">
        <CodeBlock Title="Rule" Description="BCSS is case insensitive. In this example each statement have same result." Code="@("borderb-5px-solid-red\nboRDerB-5px-Solid-RED\nborderB-5PX-Solid-Red")" />
        <CodeBlock Title="Exception 1" Description="URL values are case sensitive. The examples are different with each other." Code="@("bgi-[/paper.png]\ngbi-[/Paper.png]\nbgi-[/PAPER.PNG]")" />
        <MudAlert Severity="Severity.Info">BCSS also supports dotted i (i, İ, ı, I) case insensitive. (Known in Turkic languages like Turkish.)</MudAlert>
        <CodeBlock Title="Exception 2" Description="UnifiedClass is case sensitive. Go to next page to learn more." />
    </MudStack>

    <PageBottomRouting PreviousHref="/syntax/customvalues" PreviousText="Custom Values (Colors, Variables etc.)" NextHref="/syntax/unifiedclass" NextText="Unified Class (Reusing Classes)" />
</MudContainer>
