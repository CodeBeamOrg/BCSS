@page "/syntax/doubledash"
@namespace BCSSViewer.Docs.Pages

<MudContainer>
    <MudText Class="mb-4" Typo="Typo.h4">Dash and Double Dash Technique</MudText>

    <MudStack Class="mt-4" Spacing="4">
        <CodeBlock Description="Double Dash can always be used instead of dash." Code="@("w-200\trounded-20\nw--200\trounded--20")" />
        <CodeBlock Description="If name already has dash, double dash is essential as seperator. If values already has dash, both usage is valid." Code="@("d-inline-flex d--inline-flex\t//Value has dash, both are valid\naccent-color--red\t\t//Name has dash and double dash seperator is essential\nbox-sizing--border-box\t\t//tip: box-border is also valid")" />
        <CodeBlock Description="If value is shorthanded and has space, use dash as space, while double dash remains essential." Code="@("border--5px-solid-yellow\t//border: 5px solid yellow;")" />
    </MudStack>

    <PageBottomRouting PreviousHref="/syntax/basics" PreviousText="Basic Syntax" NextHref="/syntax/advancedsyntax" NextText="Advanced Syntax" />
</MudContainer>
