@page "/syntax/customvalues"
@namespace BCSSViewer.Docs.Pages

<MudContainer>
    <MudText Class="mb-4" Typo="Typo.h4">Custom Values</MudText>

    <MudText>In BCSS, custom values should place in square brackets. BCSS automatically converts them if syntax is proper.</MudText>

    <MudStack Class="mt-4" Spacing="4">
        <CodeBlock Description="For hex colors, start with '#' character." Code="@("bg-[#313b72]\nbg-[#313b72ff]")" />
        <CodeBlock Description="For rgb and rgba colors, seperate values with comma. No space character is allowed." Code="@("bg-[49,59,114]\nbg-[49,59,114,0.8]")" />
        <CodeBlock Description="For CSS variables, just write the variable name." Code="@("bg-[--mud-palette-primary]//a MudBlazor built-in variable")" />
        <CodeBlock Description="For url values, start with '/' character." Code="@("bgimage-[/paper.png]")" />
    </MudStack>

    <PageBottomRouting PreviousHref="/syntax/customclasses" PreviousText="Custom Classes" NextHref="/syntax/casesensitivity" NextText="Case Sensitivity" />
</MudContainer>
