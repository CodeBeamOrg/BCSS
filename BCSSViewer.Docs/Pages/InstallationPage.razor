@page "/gettingstarted/installation"
@inject BcssService Bc

<MudContainer>
    <MudText Typo="Typo.h4">Installation</MudText>

    <MudStack Spacing="4">
        <CodeBlock Description="1. Install the CodeBeam.BCSS NuGet package" Code="dotnet add package CodeBeam.BCSS" />
        <CodeBlock Description="2. Add the following to _Imports.razor" Code="@("@using BCSS")" />
        <CodeBlock Description="3. Add the following to your HTML body section, it's either index.html or _Layout.cshtml/_Host.cshtml depending on whether you're running Server-Side or WASM." Code="@("<script src=\"_content/CodeBeam.BCSS/Bcss.min.js\"></script>")" />
        <CodeBlock Description="4. Add the following to the relevant sections of Program.cs" Code="@("@using Bcss.Services;\nbuilder.Services.AddBcss();")" />
        <CodeBlock Description="5. Add the following to App.razor" Code="@("<BlazorCssProvider />")" />
        <CodeBlock Description="6. Inject the service in each page that you want to use BCSS" Code="@("@inject BcssService Bc")" />
    </MudStack>
    

    <PageBottomRouting PreviousHref="/gettingstarted/what" PreviousText="What is BCSS" NextHref="/syntax/basics" NextText="Basic Syntax" />
</MudContainer>
